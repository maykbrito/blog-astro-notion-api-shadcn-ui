<script>
  const fetchData = async () => {
    const res = await fetch("/api/fetch-youtube").then(res => res.json())

    const video = res.items[0]
    let { title, url } = video
    url = `https://www.youtube.com/embed/${url.split("=")[1]}`

    document.getElementById("title").innerText = title
    document.getElementById("video").src = url

  }

  fetchData()
</script>

<div class="flex flex-col w-full h-full">
  <a href="" target="_blank" rel="noopener noreferrer" class="flex-1 relative">
      <iframe
        id="video"
        class="rounded-lg object-cover object-center w-full h-full sm:h-48 md:h-52 xl:h-64 shadow-xl"
        src=""
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      ></iframe>
      <div class="flex flex-1 flex-col justify-between py-2">
        <h2 id="title" class="text-2xl font-bold text-smoke-50 mb-2 break-words"></h2>
      <div class="my-1 text-sm">
          <span class="rounded-full inline-flex flex-row items-center px-2 ring-1 ring-smoke-800 text-smoke-300">watch</span>
        </div>
      </div>
  </a>
</div>